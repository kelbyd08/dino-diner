<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlavorSelection">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="RadioButton">
                    <Setter Property="FontSize" Value="25"></Setter>
                    <Setter Property="BorderBrush" Value="Gray"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Style>
            </StackPanel.Resources>
            <RadioButton Click="OnFlavorChange">Cola</RadioButton>
            <RadioButton Click="OnFlavorChange">Orange</RadioButton>
            <RadioButton Click="OnFlavorChange">Vanilla</RadioButton>
            <RadioButton Click="OnFlavorChange">Chocolate</RadioButton>
            <RadioButton Click="OnFlavorChange">Root Beer</RadioButton>
            <RadioButton Click="OnFlavorChange">Cherry</RadioButton>
            <RadioButton Click="OnFlavorChange">Lime</RadioButton>
        </StackPanel>  
    </Grid>
</Page>
